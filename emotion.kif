(subclass AngryVoiceUtterance EmotionalVoiceUtterances)

(=>
  (and
    (instance ?AVU AngryVoiceUtterance)
    (agent ?AVU ?A))
  (modalAttribute
    (causesProposition
      (exists (?ANG)
        (and
          (instance ?ANG Anger)
          (experiencer ?ANG ?A)))
      (and
        (instance ?AVU AngryVoiceUtterance)
        (agent ?AVU ?A)))
    Likely))

