; TQM8.kif 
; GDPR tests with modals

(instance LawyerSmith Human)
(attribute LawyerSmith Lawyer)

(attribute SomePII PII)
(containsInformation SomePII ACMEMarketingDoc)

(instance MsJones Human)
(employs ACME MsJones)
(instance ACMEMarketingDoc Text)

(knows LawyerSmith
   (=>
     (and
       (attribute ?I PII)
       (containsInformation ?I ?D)
       (employs ACME ?H)
       (instance ?DOC Text))
     (modalAttribute
       (exists (?DIS)
         (and
           (agent ?DIS ?H)
           (patient ?DIS ?DOC)
           (instance ?DIS Disseminating)))
       Prohibition)))

(knows ?A
   (=>
     (and
       (=> ?FA ?FC)
       ?FA)
     ?FC))

(=>
   (knows ?A
     (modalAttribute ?F Prohibition))
   (knows ?A (not ?F)))

; query
(knows LawyerSmith
   (exists (?DIS)
     (and
       (agent ?DIS ?H)
       (patient ?DIS ?DOC)
       (instance ?DIS Disseminating))))
       