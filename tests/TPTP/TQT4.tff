%If the year is divisible by 4, it is a leap year .

%UNLESS, the year is also divisible by 100 .
%UNLESS, the year is also divisible by 400 . 
%Examples
%The year 2000 was a leap year because it is divisible by 400. 
%The year 1900 was not a leap year because it is divisible by 100 but not by 400. 
%The year 2100 will not be a leap year because it is divisible by 100 but not by 400. 
%The year 2024 was a leap year because it is divisible by 4. 

tff(yearFn_tp,type,
    yearFn: ($int) > $i ).
    
tff(mod_type, type, $mod: ($int * $int) > $int).
  
tff(modAx1,axiom,
  ![X:$int,Y:$int]:(
    $mod(X, Y) = $difference(X, $product($quotient_e(X, Y), Y)))).
        
tff(modAx2, axiom,
    ! [A: $int] : $mod(A, 0) = A ).
    
tff(daysInMonth_tp,type,
  daysInMonth: ($int * $i * $i) > $o).
    
tff(jan_tp,type,
  january: $i).
tff(janDays_tp,axiom,
  ![Y:$int]:
  daysInMonth(31,january,yearFn(Y))).
  
tff(feb_tp,type,
  february: $i).  

tff(februaryDays_tp,axiom,
  ![Y:$int]:(
    (($mod(Y,400)=0) =>
      daysInMonth(29,february,yearFn(Y))))).

tff(februaryDays_tp,axiom,
  ![Y:$int]:(
    (($mod(Y,100)=0) & ~($mod(Y,400)=0)) =>
      daysInMonth(28,february,yearFn(Y)))).
            
tff(februaryDays_tp,axiom,
  ![Y:$int]:(
    (($mod(Y,4)=0) & ~($mod(Y,100)=0) & ~($mod(Y,400)=0)) =>
      daysInMonth(29,february,yearFn(Y)))).
  
tff(februaryDays_tp,axiom,
  ![Y:$int]:(
    (~($mod(Y,4)=0) =>
      daysInMonth(28,february,yearFn(Y))))).
        
