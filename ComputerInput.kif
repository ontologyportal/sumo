(instance shape BinaryPredicate)
(subrelation shape property)
(domain shape 1 Physical)
(domain shape 2 ShapeAttribute)
(documentation shape English "(shape ?OBJECT ?SHAPE) means that the shape of ?OBJECT is ?SHAPE.")

; If a &%Physical object has a property which is an instance of &%ShapeAttribute,
; then that object has that shape:

(=>
  (and
    (property ?OBJ ?SHAPE)
    (instance ?OBJ Physical)
    (instance ?SHAPE ShapeAttribute))
  (shape ?OBJ ?SHAPE))

(instance Round ShapeAttribute)
(documentation Round English "The attribute of being round in at least two dimensions.")

(instance Elliptical ShapeAttribute)
(subAttribute Elliptical Round)
(documentation Elliptical English "The attribute of being elliptical or oval in at least two dimensions.")

(=>
  (instance ?SHAPE Oval)
  (shape ?SHAPE Elliptical))

(instance Circular ShapeAttribute)
(subAttribute Circular Elliptical)
(documentation Circular English "The attribute of being circular in at least two dimensions.")

(=>
  (instance ?SHAPE Circle)
  (shape ?SHAPE Circular))

(instance DiskShaped ShapeAttribute)
(documentation DiskShaped English "The attribute of being circular in one dimension and flat in the other.")
(subAttribute DiskShaped Circular)
(subAttribute DiskShaped Flat)

(instance Spherical ShapeAttribute)
(documentation Spherical English "The attribute of being spherical: circular in three dimensions.")
(contraryAttribute Spherical Flat)
(subAttribute Spherical Round)

(=>
  (instance ?SHAPE Sphere)
  (shape ?SHAPE Spherical))

(subclass SphericalObject Object)
(documentation SphericalObject English "An object with the attribute of being spherical.")

(=>
  (instance ?SPHERE SphericalObject)
  (shape ?SHAPE Spherical))

(instance Cylindrical ShapeAttribute)
(subAttribute Cylindrical Round)
(documentation Cylindrical English "The attribute of being cylindrical: having a circular cross section of roughly the same size throughout its length.  A cylindrical object may be hollow or solid.")
(contraryAttribute Cylindrical Flat)
(contraryAttribute Cylindrical Spherical)

(=>
  (instance ?SHAPE Cylinder)
  (shape ?SHAPE Cylindrical))

(instance Polygonal ShapeAttribute)
(documentation Polygonal English "The attribute of being flat with a boundary consisting of straight lines.")
(contraryAttribute Polygonal Round)

(=>
  (instance ?SHAPE Polygon)
  (shape ?SHAPE Polygonal))

(instance Triangular ShapeAttribute)
(documentation Triangular English "The attribute of being polygonal with a boundary consisting of three straight lines.")
(subAttribute Triangular Polygonal)

(=>
  (instance ?SHAPE Triangle)
  (shape ?SHAPE Triangular))

(instance QuadrilateralShaped ShapeAttribute)
(subAttribute QuadrilateralShaped Polygonal)
(documentation QuadrilateralShaped English "The attribute of being polygonal with a boundary consisting of four straight lines.")
(contraryAttribute QuadrilateralShaped Triangular)

(=>
  (instance ?SHAPE Quadrilateral)
  (shape ?SHAPE QuadrilateralShaped ))

(instance Rectangular ShapeAttribute)
(subAttribute Rectangular QuadrilateralShaped)
(documentation Rectangular English "The attribute of being polygonal with a boundary consisting of four mutually perpendicular straight lines.")

(=>
  (instance ?SHAPE Rectangle)
  (shape ?SHAPE Rectangular))

(instance SquareShaped ShapeAttribute)
(subAttribute SquareShaped Rectangular)
(documentation SquareShaped English "The attribute of being polygonal with a boundary consisting of four mutually perpendicular straight lines of equal lengths.")

(=>
  (instance ?SHAPE Square)
  (shape ?SHAPE SquareShaped))

